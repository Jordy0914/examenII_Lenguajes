@model IEnumerable<examenII_Lenguajes.tbEstudiante>

@{
    ViewBag.Title = "Mant. Estudiantes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mantenimiento de Estudiantes</h2>
<p>Listado General de Estudiantes: </p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idEstudiante)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.carnet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.apellido1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.apellido2)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idEstudiante)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.carnet)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apellido1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apellido2)
        </td>
        <td>
            @Html.ActionLink("Modificar", "Edit", new { id=item.idEstudiante }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.idEstudiante }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.idEstudiante })
        </td>
    </tr>
}

</table>
